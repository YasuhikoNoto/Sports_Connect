<h2>会員詳細編集</h2>
<%= form_with model: @member, url: member_path, method: :patch do |f| %>
<table>
  <tbody>
    <tr>
      <td>会員画像</td>
      <td><%= image_tag @member.get_member_image %><%= f.file_field :member_image, accept: 'image/*' %></td>
    </tr>
    <tr>
      <td>登録日時</td>
      <td><%= @member.created_at %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :phone_number %></td>
    </tr>
  </tbody>
</table>
<%= f.submit "変更を保存する" %>
<% end %>

<%= link_to "退会する", members_confirm_path %>