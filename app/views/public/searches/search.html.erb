<% unless @post_results.blank? %>
  <div class="container">
    <% if @post_results.blank? %>
      <h3 class="mt-3 text-center">検索結果がありません。</h3>
    <% else %>
      <h3 class="mt-3">検索結果 "<%= @q.title_cont %>"</h3>
      <table class="table border table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts_search.each do |post| %>
            <tr>
              <td><%= post.title %></td>
              <td></td>
              <td></td>
            </tr>
        <% end %>
      </table>
    <% end %>
  </div>
<% end %>

<% unless @tag_results.blank? %>
  <div class="container">
    <%= @tag_word %>
    <table class="table border table-hover table-inverse">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @tag_results.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td></td>
            <td></td>
          </tr>
      <% end %>
    </table>
  </div>
<% end %>

