<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10 col-offset-1">
      <h5 class="my-3 px-4 bg-light font-weight-bold">新規会員登録</h5>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>


        <table class="table">
          <tbody>
            <tr>
              <td><%= f.label "名前"%></td>
              <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
            </tr>
            <tr>
              <td><%= f.label "メールアドレス" %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
           <tr>
              <td><%= f.label "電話番号(任意)" %></td>
              <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
            </tr>
            <tr>
              <td><%= f.label "パスワード(6文字以上)" %></td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td><%= f.label "パスワード(確認)" %></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
        <h5 class="my-3 px-4 bg-light font-weight-bold">すでに登録済みの方</h5>
        <p><%= render "public/shared/links" %>からログインしてください</p>
      <% end %>
    </div>
  </div>
</div>

