<h4>投稿一覧 全<%= @posts.count %>件</h4>
<table>
  <thead>
    <tr>
      <th>登録日</th>
      <th>投稿者名</th>
      <th>タイトル</th>
      <th>投稿者画像</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <% @posts.each do |post| %>
  <tbody>
    <tr>
      <td><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      <td><%= link_to post.member.name, admin_member_path(post.member.id) %></td>
      <td><%= link_to post.title, admin_post_path(post.id) %></td>
      <td><%= image_tag post.member.get_member_image %></td>
      <td><%= post.is_opened %></td>
    </tr>
  </tbody>
  <% end %>
</table>

