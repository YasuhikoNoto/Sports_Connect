<div class="container">
  <div class="row">
    <div class="h4">投稿一覧</div>
    <div class="table">
    <table>
      <thead>
        <tr>
          <th>登録日</th>
          <th>投稿者名</th>
          <th>タイトル</th>
          <th>本文</th>
          <th>投稿者画像</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @posts.each do |post| %>
      <tbody>
        <tr>
          <td><%= l post.created_at, format: :"long" %></td>
          <td><%= link_to post.member.name, admin_member_path(post.member.id) %></td>
          <td><%= link_to post.title, admin_post_path(post.id) %></td>
          <td><%= post.body.truncate(100) %></td>
          <td><%= image_tag post.member.get_member_image(100,100) %></td>
          <td>
            <% if post.is_opened == true %>
              公開
            <% else %>
              非公開
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
    <%= paginate @posts %>
  </div>
</div>