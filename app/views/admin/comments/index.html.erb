<div class="container">
  <div class="row">
    <div class="h4">コメント一覧 全<%= @comments.count %>件</div>
    <table class="table">
      <thead>
        <tr>
          <th>投稿日時</th>
          <th>投稿者</th>
          <th>コメント内容</th>
          <th>投稿タイトル</th>
        </tr>
      </thead>
      <% @comments.each do |comment| %>
      <tbody>
        <tr>
          <td><%= l comment.created_at, format: :"long" %></td>
          <td><%= link_to comment.member.name, admin_member_path(comment.member.id) %></td>
          <td><%= link_to comment.body, admin_comment_path(comment.id) %></td>
          <td><%= link_to comment.post.title, admin_post_path(comment.post.id) %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>