<h2>コメント一覧</h2>
<table>
  <thead>
    <tr>
      <th>投稿日時</th>
      <th>投稿者</th>
      <th>コメント内容</th>
      <th>投稿タイトル</th>
    </tr>
  </thead>
  <% @comments.each do |comment| %>
  <tbody>
    <tr>
      <td><%= l comment.created_at %></td>
      <td><%= link_to comment.member.name, admin_member_path(comment.member.id) %></td>
      <td><%= link_to comment.body, admin_comment_path(comment.id) %></td>
      <td><%= link_to comment.post.title, admin_post_path(comment.post.id) %></td>
    </tr>
  </tbody>
  <% end %>
</table>